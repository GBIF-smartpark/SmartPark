<?xml version="1.0" encoding="utf-8"?>
<!-- popup_layout.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_centerInParent="true"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="left"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bag" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="인벤토리"
                android:textColor="#000000"
                android:textSize="30sp"
                app:fontFamily="@font/pixelroborobo" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/imageGrid"
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:columnCount="3"
            android:gravity="center"
            android:padding="16dp"
            android:rowCount="3"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="0dp">

            <!-- ImageView 1 -->
            <ImageView
                android:id="@+id/specialItem1"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/itemBackground_nonactive"
                android:scaleType="fitCenter"
                android:src="@drawable/questionmark" />

            <ImageView
                android:id="@+id/specialItem2"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/itemBackground_nonactive"
                android:scaleType="fitCenter"
                android:src="@drawable/questionmark" />

            <ImageView
                android:id="@+id/specialItem3"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/itemBackground_nonactive"
                android:scaleType="fitCenter"
                android:src="@drawable/questionmark" />

            <ImageView
                android:id="@+id/specialItem4"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/itemBackground_nonactive"
                android:scaleType="fitCenter"
                android:src="@drawable/questionmark" />

            <ImageView
                android:id="@+id/specialItem5"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/itemBackground_nonactive"
                android:scaleType="fitCenter"
                android:src="@drawable/questionmark" />

            <ImageView
                android:id="@+id/specialItem6"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/itemBackground_nonactive"
                android:scaleType="fitCenter"
                android:src="@drawable/questionmark" />

            <ImageView
                android:id="@+id/specialItem7"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/itemBackground_nonactive"
                android:scaleType="fitCenter"
                android:src="@drawable/questionmark" />

            <ImageView
                android:id="@+id/specialItem8"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/itemBackground_nonactive"
                android:scaleType="fitCenter"
                android:src="@drawable/questionmark" />

            <ImageView
                android:id="@+id/specialItem9"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@color/itemBackground_nonactive"
                android:scaleType="fitCenter"
                android:src="@drawable/questionmark" />

        </GridLayout>

        <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="닫기"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageGrid" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>